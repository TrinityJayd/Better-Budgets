            <!--Code Attribution
            Author: Microsoft DN
            Link: https://stackoverflow.com/questions/20073294/change-color-of-button-when-mouse-is-over
            -->

            <Button x:Name="startbtn"  Content="Get Started" Height="44" Canvas.Left="137" Canvas.Top="595" Width="231" Foreground="White" FontWeight="Normal" FontSize="18" BorderThickness="0" Click="startbtn_Click">
                <Button.Resources>
                    <Style TargetType="{x:Type Button}" >
                        <Setter Property="Background" Value="#FF60B64F"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4c913f"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                </Button.Resources>
            </Button>

            <!--End-->
        </Canvas>
